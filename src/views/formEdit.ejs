<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head',{title: 'Editar Producto | Pixel Shop'}) %> 
<body  class="form__body">
   <%- include('./partials/header') %>
    <main class="form__main">
        <h2>Editar producto</h2>
        <form class="form" method="POST" action="/product/update/<%= product.id %>?_method=PUT"  enctype="multipart/form-data" >
            <div>
                <label for="name">Nombre del producto</label>
                <input type="text" name="name" id="name" value="<%= product.name %>" required>
            </div>
            <div class="">
                <label for="description">Descripción del producto</label>
                <textarea type="text"id="description" name="description" cols="30" rows="10" required><%= product.description %></textarea>
            </div>
            <div class="">
                <input type="file" name="img" multiple >
                <img src="/images/<%= product.img %>" alt="">
            </div>
            <h4>Géneros de juego</h4>
            <div class="gender">
                 <% genders.forEach( ({id,name}, index) => { %>
                    <div class="gender__div">
                        <input class="" type="checkbox" name="gender" id="<%= index %>" value="<%= name %>" <% product.gender.forEach((element, i) => { %>
                                                                                                                    <%= product.gender[i] === name && 'checked' %>
                                                                                                            <% }) %>>
                        <label for="<%= index %>"><%=name%></label>
                    </div>
                <% })%>      
            </div>
            <div>
                <label for="requeriment">Requisitos del producto</label>
                <input class="input-requisitos" type="text" name="requeriment" id="requeriment" value="<%=product.requeriment[0]%>" >
                <input class="input-requisitos"  type="text" name="requeriment" id="requeriment" value="<%=product.requeriment[1]%>" >
                <input class="input-requisitos"  type="text" name="requeriment" id="requeriment" value="<%=product.requeriment[2]%>" >
                <input class="input-requisitos"  type="text" name="requeriment" id="requeriment" value="<%=product.requeriment[3]%>" >
                <input class="input-requisitos"  type="text" name="requeriment" id="requeriment" value="<%=product.requeriment[4]%>" >
            </div>
            <div class="">
                <label for="price">Precio del producto</label>
                <input type="number" name="price" id="price" value="<%= product.price %>" required>
            </div>
            <div class="">
                <label for="discount">Descuento</label>
                <input type="number" name="discount" id="discount" value="<%= product.discount %>">
            </div>
            <div class="">
                <label for="category">Sección</label>
                <select name="category" id="category">
                    <option value="<%= product.category %>" hidden selected><%= product.category %> </option>
                    
                    <option value="Ofertas especiales">Ofertas especiales</option>
                    <option value="Destacados">Destacados</option>
                    <option value="Recomendados">Recomendados</option>
                </select>
            </div>
            <div>
                <button type="submit">Editar</button>
            </div>
        </form>
    </main>
</body>
</html>