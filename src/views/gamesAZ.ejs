<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head',{title: 'Detalle de Producto | Pixel Shop' }) %>
    <body class="explore">
        <%- include('./partials/header') %>
        <section class="explore__main--form">          
            <form action="/api/product/explore" method="POST">
              <button class="ABC" type="submit" name="L" value="A">A</button>
              <button class="ABC" type="submit" name="L" value="B">B</button>
              <button class="ABC" type="submit" name="L" value="C">C</button>
              <button class="ABC" type="submit" name="L" value="D">D</button>
              <button class="ABC" type="submit" name="L" value="E">E</button>
              <button class="ABC" type="submit" name="L" value="F">F</button>
              <button class="ABC" type="submit" name="L" value="G">G</button>
              <button class="ABC" type="submit" name="L" value="H">H</button>
              <button class="ABC" type="submit" name="L" value="I">I</button>
              <button class="ABC" type="submit" name="L" value="J">J</button>
              <button class="ABC" type="submit" name="L" value="K">K</button>
              <button class="ABC" type="submit" name="L" value="L">L</button>
              <button class="ABC" type="submit" name="L" value="M">M</button>
              <button class="ABC" type="submit" name="L" value="N">N</button>
              <button class="ABC" type="submit" name="L" value="Ñ">Ñ</button>
              <button class="ABC" type="submit" name="L" value="O">O</button>
              <button class="ABC" type="submit" name="L" value="P">P</button>
              <button class="ABC" type="submit" name="L" value="Q">Q</button>
              <button class="ABC" type="submit" name="L" value="R">R</button>
              <button class="ABC" type="submit" name="L" value="S">S</button>
              <button class="ABC" type="submit" name="L" value="T">T</button>
              <button class="ABC" type="submit" name="L" value="U">U</button>
              <button class="ABC" type="submit" name="L" value="V">V</button>
              <button class="ABC" type="submit" name="L" value="W">W</button>
              <button class="ABC" type="submit" name="L" value="X">X</button>
              <button class="ABC" type="submit" name="L" value="Y">Y</button>
              <button class="ABC" type="submit" name="L" value="Z">Z</button>
            </form>
        </section>
        <main class="explore__main">
            <% if (products.length !== 0) { %>
                <h4 class="explore-titulo">JUEGOS QUE COMIENZAN CON LA LETRA: <%= leter %>  </h4>
            <% } %>
            <section class="explore__main--games">
                <% if (products.length !== 0) { %>
                    <% products.forEach(({id,img, name, price, category})=> { %>
                        <article>
                            <a href="/product/detail/<%= id %>"><img src="/images/<%=img %>" alt=""></a>
                            <div>
                                <h4 class="explore__main--games--name">
                                    <%= name %>
                                </h4>
                            </div>
                        </article>
                    <% }) %>
                <% } else { %>
                    <h4 class="no-found-games">NO SE ENCONTRARON JUEGOS CON: <%= leter %></h4>
                <% } %>
                
            </section>
        </main>
            <%- include('./partials/footer') %>
    </body>
</html>