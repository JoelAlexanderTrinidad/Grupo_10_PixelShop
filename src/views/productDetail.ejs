<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head',{title: 'Detalle de Producto | Pixel Shop'}) %> 
    <body class="productDetail">
        <%- include('./partials/header') %> 
     <!-- #################### main #################### -->
    <main class="main">
        <div class="main__background">
            <section id="main">
                
                <div id="info-principal">
                    <section class="detail__main__section">
                        <div>
                            <img src="/images/<%= product.img %>" alt="">
                        </div>
                        <div>
                            <img src="/images/carrusel-miniatura.png" alt="">
                        </div>
                        <h3><%= product.name %> / <span>Digital</span></h3>
                        
                    </section>
                    <hr>
                    <div id="buy-info">
                        <section class="main__section-buy">
                            <h2>$<%= product.price %> <span>ARS</span></h2>
                            <div>
                                <button><a href="/product/cart/"><i class="fa-solid fa-cart-shopping"></i>COMPRAR</a></button> 
                                <button><a href=""><i class="fa-brands fa-whatsapp"></i>Asesor de ventas</a></button> 
                            </div>                    
                        </section>
                        <img src="/images/metodos_de_pago.jpg" alt="">
                        <section class="main__section-info">                
                            <h3>Resumen</h3>
                            <p class="main__section-resumen"><%= product.description %></p>
                            <ul id="especificaciones">
                                <li>Precio: <%= product.price %> </li>
                                <li></li>
                                <li>Idioma texto: xxxx</li>
                                <li>Idioma voz: xxxx</li>
                                <div class="main__section-info-div">
                                    <li>Juego original y completo</li>
                                    <li><b>Incluye guía paso a paso</b></li>
                                    <li><b>Entrega inmediata</b></li>
                                </div>
                            </ul>
                            <p id="categorias:"><%= product.category %></p>
                            <ul class="main__section-categories">
                                <% misGeneros.forEach((element, i) => { %>                                 
                                    <li><%= misGeneros[i] %></li>
                                <% }) %>
                                                       
                            </ul>                           
                        </section>
                    </div>
                </div>
            </section>
           
        </section>
        <section class="main__section__articles">
                <div>            
                    <h3 id="more">Más productos</h3>
                </div>
                <% products.forEach(({id,img, name, price, category}) => { %>
                <article>
                    <a href="/product/detail/<%= id %>"><img src="/images/<%=img %>" alt=""></a>
                    <div>
                        <h4 class="product__detail__article-name"><%= name %></h4>
                        <h4 class="product__detail__article-price">$<%= price %> <span>ARS</span></h4>
                        <p><%= category %></p>
                    </div>
                    
                </article>
                   <% }) %>
                    

               
            </section>
        </div>

    </main>
    <%- include('./partials/footer') %> 
</body>
</html>
