<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head',{title: 'Administrador | Pixel Shop'}) %> 
    <body>
       <%- include('./partials/header') %>
    <main class="col-12 col-md-10 col-lg-8 mx-auto">
      <ul>
        <li><a href="/product/crear">Agregar productos</a></li>
      </ul>
      <h3>Lista de productos</h3>

        <ol class="list-group list-group-numbered">
        <% products.forEach(product => { %>   
           <li class="list-group-item d-flex justify-content-between align-items-start">
             <div class="ms-2 me-auto">
               <div class="fw-bold"><%= product.name %></div>
               
             </div>
             
             <span><a class="badge bg-primary rounded-pill" href="/product/detail/<%= product.id %>"><i class="fa-solid fa-eye"></i></a></span>

             <form action="/product/remove/<%= product.id %>?_method=DELETE" method="POST">
               <span><button class="badge bg-primary rounded-pill"><i class="fa-solid fa-trash-can"></i></button></span>
             </form>

             <span><a class="badge bg-primary rounded-pill" href="/product/edit/<%= product.id %>"><i class="fa-solid fa-pen-to-square"></i></a></span>
           </li>
           <% }) %>
          </ol>

    </main>
<%- include('./partials/footer') %> 
</body>
</html>