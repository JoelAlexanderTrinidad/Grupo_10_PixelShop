<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head',{title: 'Perfil | Pixel Shop'}) %> 

<body class="register" >
    <%- include('./partials/header') %> 
    <main class="main_register">
        <section>
            <h2>Perfil de usuario</h2>
        </section>
        <section>
            <form action="/users/update-profile?_method=PUT" method="POST">
                <div class="datos">
                    <label for="nombre" >Nombre</label>
                    <input class= "<%= locals.errors && errors.nombre ? 'is-invalid' : null %> " type="text" name="nombre" id="nombre" placeholder=" nombre" value="<%= usuario.nombre %>" >
                    <p><%= errors === true && locals.errors.passAntiguo.msg ? locals.errors.passAntiguo.msg : null %></p>
                </div>

                <div class="datos">
                    <label for="apellido">Apellido</label>
                    <input class="<%= locals.errors && errors.apellido ? 'is-invalid' : null %>" type="text" name="apellido" id="apellido" placeholder=" apellido" value="<%= usuario.apellido %>" >
                    <p><%= locals.errors && errors.apellido ? errors.apellido.msg : null %></p>
                </div>

                <div class="datos">
                    <label for="tel">Número de celular </label>
                    <input class="<%= locals.errors && errors.tel ? 'is-invalid' : null %>" type="tel" name="tel" id="tel" placeholder=" número de celular" value="<%= usuario.tel %>">
                    <p><%= locals.errors && errors.tel ? errors.tel.msg : null %></p>
                </div>

                <div class="datos">
                    <label for="email">Correo electrónico</label>
                    <input class="<%= locals.errors && errors.email ? 'is-invalid' : null %> " type="email" name="email" id="email" placeholder=" email" value="<%= usuario.email %>" >
                    <p><%= locals.errors && errors.email ? errors.email.msg : null %></p>
                </div>

                <div class="datos">
                    <label for="contraseña">Contraseña antigua</label>
                    <input class="<%= locals.errors && errors.password ? 'is-invalid' : null %> " type="password" name="passAntiguo" id="contraseña" placeholder=" contraseña antigua" value="" >
                </div>
                <div class="datos">
                    <label for="contraseña">Contraseña nueva</label>
                    <input class="<%= locals.errors && errors.password ? 'is-invalid' : null %> " type="password" name="nuevaPass1" id="contraseña" placeholder=" contraseña nueva" value="" >
                </div>
                <div class="datos">
                    <label for="contraseña">Repite tu contraseña</label>
                    <input class="<%= locals.errors && errors.password ? 'is-invalid' : null %> " type="password" name="nuevaPass2" id="contraseña" placeholder=" Repite tu contraseña" value="" >
                </div>

                <div class="datos">
                    <label for="fecha">Fecha de nacimiento</label>
                    <input class="<%= locals.errors && errors.fecha ? 'is-invalid' : null %>" type="date" name="fecha" id="fecha" value="<%= usuario.fecha %>" >
                    <p><%= locals.errors && errors.fecha ? errors.fecha.msg : null %></p>
                </div>
                  
               <div class="button">
            <button type="submit">Guardar</button>
            <button type="reset">Cancelar</button>
                </div>
    </form>
    </section>
    </main>
    <%- include('./partials/footer') %> 
</body>
</html>