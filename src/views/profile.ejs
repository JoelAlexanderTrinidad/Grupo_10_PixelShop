<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head',{title: 'Perfil | Pixel Shop'}) %> 

<body class="register" >
    <%- include('./partials/header') %> 
    <main class="main_register">
        <section>
            <h2>Perfil de usuario</h2>
        </section>
        <section>
            <form action="/users/updateProfile?_method=PUT" method="POST">
                <div class="datos">
                    <label for="nombre" >Nombre</label>
                    <input class= "<%= locals.errors && errors.nombre ? 'is-invalid' : null %> " type="text" name="nombre" id="nombre" placeholder=" nombre" value="<%= usuarios.nombre %>" required>
                    <p><%= locals.errors && errors.nombre ? errors.nombre.msg : null %></p>
                </div>

                <div class="datos">
                    <label for="apellido">Apellido</label>
                    <input class="<%= locals.errors && errors.apellido ? 'is-invalid' : null %>" type="text" name="apellido" id="apellido" placeholder=" apellido" value="<%= usuarios.apellido %>" required>
                    <p><%= locals.errors && errors.apellido ? errors.apellido.msg : null %></p>
                </div>

                <div class="datos">
                    <label for="tel">Número de celular </label>
                    <input class="<%= locals.errors && errors.tel ? 'is-invalid' : null %>" type="tel" name="tel" id="tel" placeholder=" número de celular" value="<%= usuarios.tel %>">
                    <p><%= locals.errors && errors.tel ? errors.tel.msg : null %></p>
                </div>

                <div class="datos">
                    <label for="email">Correo electrónico</label>
                    <input class="<%= locals.errors && errors.email ? 'is-invalid' : null %> " type="email" name="email" id="email" placeholder=" email" value="<%= usuarios.email %>" required>
                    <p><%= locals.errors && errors.email ? errors.email.msg : null %></p>
                </div>

                <div class="datos">
                    <label for="contraseña">Contraseña</label>
                    <input class="<%= locals.errors && errors.password ? 'is-invalid' : null %> " type="password" name="contraseña" id="contraseña" placeholder=" contraseña" value="<%= usuarios.password %>" required>
                    <p><%= locals.errors && errors.password ? errors.password.msg : null %></p>
                </div>

                <div class="datos">
                    <label for="fecha">Fecha de nacimiento</label>
                    <input class="<%= locals.errors && errors.fecha ? 'is-invalid' : null %>" type="date" name="fecha" id="fecha" value="<%= usuarios.fecha %>" required>
                    <p><%= locals.errors && errors.fecha ? errors.fecha.msg : null %></p>
                </div>
                <div class="datos">
            </form>
        </section>
        <div class="button">
            <a href="/"><button type="submit">Guardar</button></a>
            <a href="/"><button>Cancelar</button></a>
        </div>
    </section>
    </main>
    <%- include('./partials/footer') %> 
</body>
</html>