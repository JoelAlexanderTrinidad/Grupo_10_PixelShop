<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head',{title: 'Perfil | Pixel Shop'}) %> 

<body class="register" >
    <%- include('./partials/header') %> 
    <main class="main_register">
        <section>
            <h2>Perfil de usuario</h2>
        </section>
        <section>
            <form action="/users/updateProfile?_method=PUT" method="POST">
                <div class="datos">
                    <label for="nombre" >Nombre</label>
                    <input type="text" name="nombre" id="nombre" placeholder=" nombre" required>
                </div>

                <div class="datos">
                    <label for="apellido">Apellido</label>
                    <input type="text" name="apellido" id="apellido" placeholder=" apellido" required>
                </div>

                <div class="datos">
                    <label for="tel">Número de celular </label>
                    <input type="tel" name="tel" id="tel" placeholder=" número de celular">
                </div>

                <div class="datos">
                    <label for="email">Correo electrónico</label>
                    <input type="email" name="email" id="email" placeholder=" email" required>
                </div>

                <div class="datos">
                    <label for="contraseña">Contraseña</label>
                    <input type="password" name="contraseña" id="contraseña" placeholder=" contraseña" required>
                </div>

                <div class="datos">
                    <label for="fecha">Fecha de nacimiento</label>
                    <input type="date" name="fecha" id="fecha" required>
                </div>
                <div class="datos">
            </form>
        </section>
        <div class="button">
            <a href="/"><button type="submit">Guardar</button></a>
            <a href="/"><button>Cancelar</button></a>
        </div>
    </section>
    </main>
    <%- include('./partials/footer') %> 
</body>
</html>